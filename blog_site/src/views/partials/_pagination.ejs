
<% 
const aktif = aktifSayfa;
const onceki = parseInt(aktif) - 1;
const sonraki = parseInt(aktif) + 1;
const toplamSayfa = sayfaSayisi;
%>

<div class="block"></div>
<nav class="pagination" role="navigation" aria-label="pagination">
    <a <%= aktif != 1 ? 'href=/?page='+onceki : ''  %>       class="pagination-previous <%- aktifSayfa==1 ?'is-disabled' : '' %>" title="This is the first page"
      >Previous</a
    >
    <a <%= aktif != toplamSayfa ? 'href=/?page='+sonraki : ''  %>  class="pagination-previous
         <%- aktifSayfa == toplamSayfa ?'is-disabled' : ''%>"" class="pagination-next" >Next page</a>
    <ul class="pagination-list">

        <% for( let index = 1; index <= sayfaSayisi; index++ ) { %>
            <li>
                <a href="/?page=<%=index%>" class="pagination-link <%= index == aktifSayfa ? 'is-current' : ''  %> " aria-label="Goto page"><%- index %></a>
              </li>
        <% } %>
    </ul>
  </nav>
  <div class="block"></div>